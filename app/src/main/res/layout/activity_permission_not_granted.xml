<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.PermissionNotGrantedActivity">

    <LinearLayout
        android:id="@+id/llTopMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/ivStoragePermission"
        android:layout_marginBottom="40dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Oops..."
            android:textSize="14sp"
            android:textColor="@color/black_alpha_60"
            android:fontFamily="@font/sailec_bold"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Storage access not available"
            android:textSize="15sp"
            android:textColor="@color/black_alpha_70"
            android:fontFamily="@font/sailec_bold" />

    </LinearLayout>

    <ImageView
        android:id="@+id/ivStoragePermission"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_storage_permission"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ivStoragePermission"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restart application and"
            android:textSize="16sp"
            android:fontFamily="@font/sailec_bold"
            android:textColor="@color/black_alpha_90"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="grant storage permissions to start scanning"
            android:textSize="16sp"
            android:fontFamily="@font/sailec_bold"
            android:textColor="@color/black_alpha_90"
            android:lines="2"/>

    </LinearLayout>

</RelativeLayout>