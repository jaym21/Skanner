<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="@drawable/dialog_fragment_bg">

    <LinearLayout
        android:id="@+id/llDeleteDocumentText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete document"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/sailec_bold"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Are you sure you want to delete the document?"
            android:textSize="14sp"
            android:textColor="@color/black_alpha_70"
            android:fontFamily="@font/sailec_regular" />

    </LinearLayout>

    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@id/llDeleteDocumentText"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_light_bg"
        android:elevation="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:src="@drawable/ic_close"
        app:tint="@color/blue_500"
        android:layout_marginBottom="10dp" />

    <ImageView
        android:id="@+id/ivChangeAccept"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_check"
        app:tint="@color/blue_500"
        android:background="@drawable/button_light_bg"
        android:elevation="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_below="@id/llDeleteDocumentText"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="10dp"/>

</RelativeLayout>